<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:animateLayoutChanges="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main">

    <TextView
            android:id="@+id/tv_status_nfc"
            style="@style/custom_tv"
            android:text="@string/tv_noNfc"
    />
    <LinearLayout
            android:id="@+id/content_cardReady"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingStart="32dp"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">
        <TextView
                android:id="@+id/text1"
                style="@style/custom_tv"
                android:layout_marginTop="90dp"
                tools:text="4444 - 4444 - 4444 - 4444"
        />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
        >
            <TextView
                    android:id="@+id/text2"
                    style="@style/custom_tv"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    tools:text="22/15"
                    android:layout_width="0dp"/>
            <ImageView
                    android:id="@android:id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    tools:ignore="ContentDescription"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:id="@+id/content_putCard"
            style="@style/custom_tv"
            android:drawableTop="@drawable/nfc_scan"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="@string/tv_tapYourCard"
    />


</LinearLayout>